# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=alpr_system
POSTGRES_USER=alpr_admin
POSTGRES_PASSWORD=change_this_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false
API_PREFIX=/api/v1

# JWT Security
SECRET_KEY=generate_a_secure_random_key_here_use_openssl_rand_hex_32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=true

# ALPR Configuration
ALPR_COUNTRY=us
ALPR_REGION=
ALPR_CONFIDENCE_THRESHOLD=80
ALPR_TOP_N=10
ALPR_PROCESS_INTERVAL=0.5

# Camera Configuration
ENTRY_CAMERA_ID=0
ENTRY_CAMERA_NAME=Entry Camera
ENTRY_CAMERA_RESOLUTION_WIDTH=1920
ENTRY_CAMERA_RESOLUTION_HEIGHT=1080
ENTRY_CAMERA_FPS=30

EXIT_CAMERA_ID=1
EXIT_CAMERA_NAME=Exit Camera
EXIT_CAMERA_RESOLUTION_WIDTH=1920
EXIT_CAMERA_RESOLUTION_HEIGHT=1080
EXIT_CAMERA_FPS=30

# GPIO Configuration (Raspberry Pi)
BARRIER_ENTRY_PIN=17
BARRIER_EXIT_PIN=27
SENSOR_ENTRY_PIN=22
SENSOR_EXIT_PIN=23
GPIO_MODE=BCM

# Barrier Control
BARRIER_OPEN_DURATION=5
BARRIER_TIMEOUT=10
BARRIER_SAFETY_CHECK=true

# Parking Configuration
TOTAL_PARKING_CAPACITY=100
ENABLE_VISITOR_PARKING=false
MAX_PARKING_DURATION_HOURS=24

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/alpr-system/app.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# Image Storage
ENABLE_IMAGE_CAPTURE=true
IMAGE_STORAGE_PATH=/var/alpr-system/images
IMAGE_RETENTION_DAYS=30
IMAGE_FORMAT=jpg
IMAGE_QUALITY=85

# Frontend Configuration
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000/ws
VITE_APP_TITLE=ALPR Parking System

# System
ENVIRONMENT=development
DEBUG=false
TIMEZONE=UTC
